<%= render 'books/list', user: @user, book: @book %>




<div class="col-md-8 offset-md-1">
  <h2>Book detail</h2>
  	<table class="table">
  		<tbody>
  		  <% @book.each do |book| %>
  	    <tr>
          <td>          
    	      <%= attachment_image_tag @user, :profile_image_id, :fill, 60, 60, fallback: "no_image.jpg", size:'60x60' %>
          </td>
          <td>
            <%= books.title %>
          </td>
          <td>
            <%= books.title %>
          </td>
          <td>
            <a class="btn btn-sm btn-success edit_book_35026" href="/books/35026/edit">Edit</a>
            
            <%= link_to "編集", edit_book_path(@book.id), class:"btn btn-sm btn-success" %>
            
          </td>
          <td>
            <% if @book.user == current_user %>
              <%= link_to "削除", post_image_path(@book), method: :delete, class:"btn btn-sm btn-danger" "data-confirm" => "本当に削除しますか？"  %>
            <% end %>
          </td>
        </tr>
        <% end %>
      </tbody>
    </table>
    </div>
    
    <div class="col-md-8 offset-md-1">
      <h2>Books</h2>
      <table class="table table-hover table-inverse">
        <thead>
          <tr>
            <th></th>
            <th>Title</th>
            <th>Opinion</th>
            <th colspan="3"></th>
          </tr>
        </thead>
        <tbody>
          <% @book.each do |book| %>
          <tr>
            <td>
              <%= attachment_image_tag @user, :profile_image_id, :fill, 60, 60, fallback: "no_image.jpg", size:'60x60' %>
            </td>
