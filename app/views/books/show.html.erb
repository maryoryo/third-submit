<p class="notice"></p>

<div class="container px-5 px-sm-0">


<%= render 'books/list', user: @book_user, book: @book %>


<div class="col-md-8 offset-md-1">
  <h2>Book detail</h2>
  	<table class="table">
  		<tbody>
  		  <%# @books.each do |books| %>
  	    <tr>
          <td class="text-center">          
    	      <%#= link_to (attachment_image_tag @user, :profile_image_id, :fill, 60, 60, fallback: "no_image.jpg", size:'60x60'), (@user.name), user_path(@user.id) %>
    	      <%= link_to user_path(@books.user) do %>
    	      <%= attachment_image_tag @books.user, :profile_image, :fill, 60, 60, fallback: "no_image.jpg", size:'60x60' %><br/>
    	      <%= @books.user.name %>
    	      <% end %>
    	      <%#= attachment_image_tag @user, :profile_image_id, :fill, 60, 60, fallback: "no_image.jpg", size:'60x60' %>
    	      <%#= link_to @user.name, user_path(@user.id) %>
    	    </td>
          <td>
            <%= link_to @books.title, book_path(@books) %>
            
          </td>
          <td>
            <%= @books.body %>
            
          </td>
          <% if @book_user.id == current_user.id %>
          <td>
            <!--<a class="btn btn-sm btn-success edit_book_35026" href="/books/35026/edit">Edit</a>-->
            
            <%= link_to "Edit", edit_book_path(@books), class:"btn btn-sm btn-success" %>
          </td>
          <td>
            <%# if @book.user == current_user %>
            <%= link_to "Destroy", book_path(@books), method: :delete, class:"btn btn-sm btn-danger" %>
            
          </td>
          <% end %>
        </tr>
        <%# end %>
      </tbody>
    </table>
</div>
</div>    
  