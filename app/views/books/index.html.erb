<p class="notice"></p>

<div class="container px-5 px-sm-0">
  
  <%= render 'books/list', user: @user, book: @book %>
  
        
      
   
    
    <div class="col-md-8 offset-md-1">
      <h2>Books</h2>
      <table class="table table-hover table-inverse">
        <thead>
          <tr>
            <th></th>
            <th>Title</th>
            <th>Opinion</th>
            <th colspan="3"></th>
          </tr>
        </thead>
        <tbody>
          <% @books.each do |books| %>
          <% @users.each do |users| %>
          <tr>
            
            <td>
              <%= link_to (attachment_image_tag users, :profile_image, :fill, 60, 60, fallback: "no_image.jpg", size:'60x60'), user_path(users.id) %>
            </td>
            <td>
              <%= link_to books.title, book_path(books.id) %>
            </td>
            <td>
              <%= books.body %>
            </td>
            <% end %>
            <% end %>
          </tr>
        </tbody>
      </table>
    </div>
   
</div>


