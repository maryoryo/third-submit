<p id="notice"></p>

<div class="container px-5 px-sm-0">
  
  <div class="row">
    <div class="col-md-3">
      <h2>User info</h2>
      <img class="attachment user profile_image fallback" src="/assets/no_image-ede28af4bad96368ef41be1b4be1cffce0d9402540f75d17895e32cb0d2af5e6.jpg"><table class="table">
      <table class="table">
        <% @user.each do |user| %>
        <tbody>
          <tr>name <%= user.name %></tr>
          <tr>introduction <%= @user.introduction %></tr>
        </tbody>
      </table>
      <div class="row">
        <a class="btn btn-outline-secondary btn-block fas fa-user-cog edit_user_42491" href="/users/edit:id"></a>
      </div>
      <h2 class="mt-3">New book</h2>
      <div class="form-new">
        <%= form_with model: @user, url: user_session_path, local: true do |bk| %>
        <div class="form-group">
          <label for="book_title">Title</label>
           <%= bk.text_field :title %>
        </div>
        <div class="form-group">
          <label for="book_opinion">Opinion</label>
          <%= bk.text_area :body %>
        </div>
        <div class="form-group">
          <%= bk.submit '投稿' %>
        </div>
        <% end %>
      </div>
    </div>
  </div>
</div>