




<div class="row">
    <div class="col-md-3">
      <h2>User info</h2>
      <%= attachment_image_tag user, :profile_image, :fill, 60, 60, fallback: "no_image.jpg", size:'100x100' %>
      <%#= image_tag('person.jpg') %>
      <!--<img class="attachment user profile_image fallback" src="/assets/no_image-ede28af4bad96368ef41be1b4be1cffce0d9402540f75d17895e32cb0d2af5e6.jpg">-->
      
      <table class="table">
        <%# @user.each do |users| %>
        <tbody>
          <tr>
            <th>name</th>
            <th><%= user.name %></th>
          </tr>
          <tr>
            <th>introduction </th>
            <th><%= user.introduction %></th>
          </tr>
        <%# end %>
        </tbody>

      </table>
      <div class="row">
        <%= link_to "", edit_user_path(user.id), class:"btn btn-outline-secondary btn-block fas fa-user-cog" %>
        <!--<a class="btn btn-outline-secondary btn-block fas fa-user-cog edit_user_42491" href="/users/edit:id"></a>-->
      </div>
      <h2 class="mt-3">New book</h2>
      
      
      <% if book.errors.any? %>
      <%= book.errors.count %>件のエラーが発生しました
      <% book.errors.full_messages.each do |message| %>
      <%= message %>
      <% end %>
      <% end %>
      
      <div class="form">
        <%= form_with model: book, local: true do |t| %>
        <div class="form-group">
          <label for="book_title">Title</label>
           <p><%= t.text_field :title %></p>
        </div>
        <div class="form-group">
          <label for="book_opinion">Opinion</label>
          <p><%= t.text_area :body %></p>
        </div>
        <div class="form-group">
          <%= t.submit 'Create Book' %>
        </div>
        <% end %>
      </div>
    </div>