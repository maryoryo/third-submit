
<p class="notice"></p>

<div class="container px-5 px-sm-0">

<%= render 'books/list', user: @user, book: @book %>


<div class="col-md-8 offset-md-1">
  <h2>Books</h2>
  	<table class="table">
      <thead>
        <tr>
          <th></th>
          <th>Title</th>
          <th>Opinion</th>
          <th colspan="3"></th>
        </tr>
      </thead>
  		<tbody>
  		  <%# @book.each do |book| %>
  	    <tr>
          <td class="text-center">          
          
    	      <%= link_to (attachment_image_tag @user, :profile_image, :fill, 60, 60, fallback: "no_image.jpg", size:'60x60'), user_path(@user.id) %>
    	      <%#= attachment_image_tag @user, :profile_image_id, :fill, 60, 60, fallback: "no_image.jpg", size:'60x60' %>
    	    </td>
          <td>
            <%= link_to @book.title, book_path(@book.id) %>
          </td>
          <td>
            <%= @book.body %>
          </td>
        </tr>
      </tbody>
    </table>
</div>
</div>